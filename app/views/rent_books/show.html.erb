<%- model_class = RentBook -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:book_id) %>:</strong></dt>
  <dd><%= @rent_book.book_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @rent_book.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:start_rent_time) %>:</strong></dt>
  <dd><%= @rent_book.start_rent_time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:end_rent_time) %>:</strong></dt>
  <dd><%= @rent_book.end_rent_time %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              rent_books_path(@rent_book.book), :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_rent_book_path(@rent_book), :class => 'btn btn-default' %>
