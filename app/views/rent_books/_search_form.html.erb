<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand">Search books</a>
    <%= form_with url: rent_books_path, local: true, method: :get, :html => { :class => "form-inline" } do |f| %>

    <div class="dropdown form-group">
      <button class="dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown">
        Select books<b class="caret"></b>
      </button>
      <div class="dropdown-menu" >
      <%= f.collection_check_boxes :book_ids, Book.all, :id, :title do |b| %>
        <div class="dropdown-item" aria-labelledby="dropdownMenuButton">
          <%= b.check_box id: b.object.id %>
          <%= b.label %>
        </div>
      <% end %>
      </div>
    </div>

    <%= f.label :start_date, :class => 'control-label' %>
    <%= f.date_field :start_date, :class => 'form-control mr-sm-2' %>

    <%= f.label :end_date, :class => 'control-label' %>
    <%= f.date_field :end_date, :class => 'form-control mr-sm-2' %>

    <%= f.submit 'search', :class => 'btn btn-outline-success my-2 my-sm-0' %>
    <% end %>
</nav>
