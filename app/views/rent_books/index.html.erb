<%- model_class = RentBook -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:book_id) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:start_rent_time) %></th>
      <th><%= model_class.human_attribute_name(:end_rent_time) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @rent_books.each do |rent_book| %>
      <tr>
        <td><%= link_to rent_book.id, rent_book_path(rent_book) %></td>
        <td><%= rent_book.book_id %></td>
        <td><%= rent_book.user_id %></td>
        <td><%= rent_book.start_rent_time %></td>
        <td><%= rent_book.end_rent_time %></td>
        <td><%=l rent_book.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      rent_book_path(rent_book), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_rent_book_path(rent_book), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      rent_book_path(rent_book),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to t('.new', :default => t("helpers.links.new")),
            new_rent_book_path,
            :class => 'btn btn-primary' %>

<%= link_to t('.back', :default => t("helpers.links.back")),
            root_path, :class => 'btn btn-default'  %>
